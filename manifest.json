{
  "manifest_version": 3,
  "name": "Countdown Timer",
  "version": "1.0",
  "description": "Replace new tab with a customizable countdown timer focusing on life events",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  "icons": {
    "16": "icons/IMG_20220426_120041 (Custom) (2).jpg",
    "48": "icons/IMG_20220426_120041 (Custom) (1).jpg",
    "128": "icons/IMG_20220426_120041 (Custom).jpg"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "chrome-extension://*/*",
    "chrome://newtab/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/IMG_20220426_120041 (Custom) (2).jpg",
      "48": "icons/IMG_20220426_120041 (Custom) (1).jpg",
      "128": "icons/IMG_20220426_120041 (Custom).jpg"
    }
  },
  "minimum_chrome_version": "88"
} 